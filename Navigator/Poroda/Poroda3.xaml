<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Navigator.Poroda3">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="3.Йоркширский терьер"
                   FontSize="Large"
                   HorizontalOptions="Center"/>
            <Image Source="terjer.jpg"
                   WidthRequest = "300"
               HeightRequest = "300"/>
            <Label Text="Одна из самых популярных в мире комнатно-декоративных пород собак. Йорк очарователен внешне, энергичен, ласков и является отличным компаньоном."
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand"
                   Margin="5"
                   />
            <Button x:Name="obratno"
                    Text="Вернутся в главное меню"
                    Clicked="obratno_Clicked"/>
            <Button x:Name="sled"
                    Text="Следующая порода"
                    Clicked="sled_Clicked"/>
            <Button x:Name="konec"
                    Text="Переключится на самое последнее"
                    Clicked="konec_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Navigator.Poroda5">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Уиппет"
                   FontSize="Large"
                   HorizontalOptions="Center"/>
            <Image Source="uippet.jpg"
                   WidthRequest = "300"
               HeightRequest = "300"/>
            <Label Text="Небольшая порода собак родом из Англии, ее название произошло от английского whippet, что дословно означает «гончая»."
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand"
                   Margin="5"/>
            <Button x:Name="obratno"
                    Text="Вернутся в главное меню"
                    Clicked="obratno_Clicked"/>
            <Button x:Name="sled"
                    Text="Следующая порода"
                    Clicked="sled_Clicked"/>
            <Button x:Name="konec"
                    Text="Переключится на самое последнее"
                    Clicked="konec_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>